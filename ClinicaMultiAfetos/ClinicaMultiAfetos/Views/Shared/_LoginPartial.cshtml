@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" id="logoutForm"
      method="post" class="navbar-left">
        <ul class="nav navbar-nav flex-grow-1 navbar-left">

            @if (User.IsInRole("Admin"))
            {
                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register" style="color:white">&nbsp;Novo Usuário&nbsp;&nbsp;&nbsp; </a>
            }

            <button type="submit" style="width:auto" class="nav-link text-dark btn btn-link ">
                Logout : @User.Identity.Name &nbsp;
            </button>



        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav flex-grow-1 navbar-left">
        <a class="nav-link text-dark" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@string.Format("{0}{1}",Context.Request.Path, Context.Request.QueryString)" style="color:white">&nbsp; Log in&nbsp; </a>


    </ul>

}